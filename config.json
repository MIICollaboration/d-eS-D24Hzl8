{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "dist/css/",
      "files": [{
        "destination": "styles.css",
        "format": "css/variables"
      }]
    },
    "json": {
      "transformGroup": "js",
      "buildPath": "dist/json/",
      "files": [{
        "destination": "tokens.json",
        "format": "json"
      }]
    }
  }
}